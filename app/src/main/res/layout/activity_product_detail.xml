<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivDetails"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/ic_back"/>

            <RelativeLayout
                android:id="@+id/rlCart"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/bg_cart">

                <ImageView
                    android:id="@+id/ivCart"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/cart_vector" />

                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    tools:text="10"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:padding="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:background="@drawable/notif_button"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ivDetails"
                android:background="@drawable/bottom_sheet_background">

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:background="@color/grey_pic"/>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Lorem Ipsum Dolor Sit Amet"
                    android:textColor="@color/black"
                    android:layout_below="@id/view2"
                    android:textSize="@dimen/_20ssp"
                    android:includeFontPadding="false"/>

                <RelativeLayout
                    android:id="@+id/rlInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTitle"
                    android:layout_marginTop="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            tools:text="detik.com"
                            android:includeFontPadding="false"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:textColor="@color/menu_background"
                            android:textSize="@dimen/_18ssp" />
                    </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlInfo"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/ivStar"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/ic_star"/>

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="4.3"
                    android:includeFontPadding="false"
                    android:textColor="@color/grey_category"
                    android:textSize="@dimen/_16ssp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/ivStar"
                    android:layout_marginStart="@dimen/_5sdp"/>
                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@id/rlRating"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:background="@color/grey_pic"/>

                <TextView
                    android:id="@+id/tvDescTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_18ssp"
                    android:text="Deskrispsi"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    tools:text="detik.com"
                    android:includeFontPadding="false"
                    android:layout_below="@+id/tvDescTitle"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/_12ssp" />


                </RelativeLayout>

            </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_sheet_background">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDirectPayment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:background="@drawable/cardbackgroundgrey"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:text="Beli Langsung"
            android:textAllCaps="false"
            android:textColor="@color/menu_background"
            android:textSize="@dimen/_14ssp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:background="@drawable/cardbackgroundblue"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:text="Masukkan ke Keranjang"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/btnDirectPayment"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>