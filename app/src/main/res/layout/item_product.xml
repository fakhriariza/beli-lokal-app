<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_152sdp"
    android:layout_height="@dimen/_250sdp"
    android:weightSum="2"
    app:cardUseCompatPadding="true"
    android:layout_marginVertical="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_12sdp"
    android:id="@+id/rlProductCard">


    <androidx.cardview.widget.CardView
        android:id="@+id/flImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_152sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp">

    <ImageView
        android:id="@+id/ivProduct"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_152sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flImage"
        android:layout_marginTop="@dimen/_5sdp">

        <TextView
            android:id="@+id/tvProductTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sendal Hitam Kuat Tahan Lama"
            android:ellipsize="end"
            android:maxLines="2"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvProductTitle">

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp11.000"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/menu_background"/>
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>