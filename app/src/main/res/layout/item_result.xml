<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:layout_marginHorizontal="@dimen/_40sdp"
    android:layout_marginVertical="@dimen/_8sdp"
    android:id="@+id/rlProductCard">

    <RelativeLayout
        android:id="@+id/rlContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp">

        <TextView
            android:id="@+id/tvProductTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            tools:text="Giv Biru"
            android:textColor="@color/blue_category"
            android:textSize="@dimen/_16ssp" />

        <RelativeLayout
            android:id="@+id/rlPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_below="@+id/tvProductTitle">

            <TextView
                android:id="@+id/tvPriceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                tools:text="Rp10.000"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_below="@+id/rlPrice">

            <TextView
                android:id="@+id/tvQuantityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kuantitas"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1"
                android:fontFamily="@font/poppins_medium"
                android:layout_alignParentEnd="true"
                android:includeFontPadding="false"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_below="@+id/rlQuantity">

            <TextView
                android:id="@+id/tvTotalPriceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga"
                android:fontFamily="@font/poppins_semibold"
                android:includeFontPadding="false"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rp10.000"
                android:fontFamily="@font/poppins_semibold"
                android:layout_alignParentEnd="true"
                android:includeFontPadding="false"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"/>
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/rlContent"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/grey_pic"/>



</RelativeLayout>